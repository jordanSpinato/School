  cout <<"Phone Carrier: " << cellObj2.getCarrier()<<endl;
  cout <<"Phone Color:"<< cellObj2.getColor()<<endl;


  cout <<endl<<endl;
  for (int i=0; i<4; i++)
    {
      
  cellObj1.changeColor();
